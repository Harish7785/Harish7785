
pipeline {
    agent any

    stages {
        stage('Maven Build') { // Correct usage of 'stage'
            steps {
                // Your build steps here, e.g., Maven commands
                sh 'mvn clean install'
            }
        }

        stage('Test') {
            steps {
                // Your test steps here
                sh 'mvn test'
            }
        }
    }

    post {
        always {
            echo 'This will always run after the stages are complete.'
        }
    }
}
